<style>
  .landing-container {
    max-width: 900px;
    margin: 2rem auto;
    padding: 2rem;
    background: var(--main-bg);
    border-radius: 12px;
    box-shadow: 0 2px 16px var(--card-shadow, rgba(0,0,0,0.07));
    color: var(--main-text);
  }
  .greeting {
    text-align: center;
    margin-bottom: 2.5rem;
  }
  .greeting .socials a {
    margin: 0 0.5rem;
    font-size: 1.5rem;
    color: var(--link-color, #0072b1);
    text-decoration: none;
  }
  .about {
    margin-bottom: 2.5rem;
  }
  .about-list {
    margin: 1rem 0 0 0;
    padding-left: 1.2rem;
  }
  .about-list li {
    margin-bottom: 0.5rem;
    font-size: 1.05rem;
  }
  .projects {
    margin-bottom: 2rem;
  }
  .project-cards {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }
  .project-card {
    background: var(--card-bg, #f8f9fa);
    border-radius: 10px;
    box-shadow: 0 1px 6px var(--card-shadow, rgba(0,0,0,0.06));
    flex: 1 1 270px;
    min-width: 270px;
    max-width: 350px;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    transition: box-shadow 0.2s;
    color: var(--main-text);
  }
  .project-card:hover {
    box-shadow: 0 4px 18px var(--card-shadow, rgba(0,0,0,0.13));
  }
  .project-img {
    width: 100%;
    height: 140px;
    object-fit: cover;
    background: var(--img-bg, #e9ecef);
  }
  .project-content {
    padding: 1rem 1.2rem 1.2rem 1.2rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .project-content h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.2rem;
  }
  .project-content p {
    font-size: 1rem;
    margin-bottom: 0.7rem;
  }
  .project-links a {
    margin-right: 0.7rem;
    color: var(--link-color, #0072b1);
    text-decoration: none;
    font-weight: 500;
  }
</style>

